{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Local Build",
      "type": "shell",
      "command": "docker build -t duckietown/farfetched:latest-arm64v8 .",
      "options": {
        "cwd": "${workspaceFolder}/lab3/farfetched",
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Local Test",
      "type": "shell",
      "command": "dts devel run",
      "options": {
        "cwd": "${workspaceFolder}/lab3/farfetched"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "dependsOn": [
        "Local Build"
      ]
    },
    {
      "label": "Remote Build",
      "type": "shell",
      "command": "docker -H csc22902.local build -t duckietown/farfetched:latest-arm64v8 .",
      "options": {
        "cwd": "${workspaceFolder}/lab3/farfetched"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Remote Test",
      "type": "shell",
      "command": "dts devel run -H csc22902.local",
      "options": {
        "cwd": "${workspaceFolder}/lab3/farfetched"
      },
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "dependsOn": [
        "Remote Build"
      ]
    }
  ]
}
